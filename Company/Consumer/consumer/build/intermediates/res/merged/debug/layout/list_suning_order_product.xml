<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/list_product_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/back_white_rec_border"
                android:scaleType="fitCenter"
                android:src="@drawable/loading_default" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="1px">

                        <TextView
                            android:id="@+id/list_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/list_product_attr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/textColorThird"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/list_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/red"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/list_product_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/textColorSecond"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="64dp"
                        android:layout_height="24dp"
                        android:layout_gravity="right"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_buy"
                        android:gravity="center"
                        android:text="申请退货"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <Button
                        android:layout_width="64dp"
                        android:layout_height="24dp"
                        android:layout_gravity="right"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_buy"
                        android:gravity="center"
                        android:text="申请退货"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider"></View>

        <TextView
            android:id="@+id/list_product_wuliu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_trans_divider"
            android:gravity="center"
            android:padding="8dp"
            android:text="查看\n物流"
            android:textColor="@color/textColorSecond"
            android:textSize="14dp" />

    </LinearLayout>

</FrameLayout><!-- From: file:/Users/Smartown/Desktop/Develop/Android/Projects/AndroidStudio/Company/Consumer/consumer/src/main/res/layout/list_suning_order_product.xml -->